{
    "compilerOptions": {
      "target": "es2021",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node"
    },
    "include": [
      "src/**/*.ts",
      "tests/**/*.ts",
      "config/**/*.ts",
      ".env"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
